<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="Inserisci il nome " />

    <EditText
        android:id="@+id/testo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Inserisci la descrizione"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/testo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aggiungi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:background="@drawable/bottone_arrotondato"
            android:gravity="center"
            android:text="AGGIUNGI" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/uccidi_activity"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:background="@drawable/bottone_arrotondato"
            android:gravity="center"
            android:text="TORNA ALLA PAGINA PRECEDENTE"
            android:textSize="15sp"/>


    </LinearLayout>


</LinearLayout>
