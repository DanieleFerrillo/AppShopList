<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="#111113">

        <ImageView
            android:id="@+id/immagine_prodotto"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginTop="6px"
            android:background="@drawable/ic_shop"
            android:padding="2dp" />

        <TextView
            android:id="@+id/nome_prodotto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/immagine_prodotto"
            android:text="Line 1"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descrizione_prodotto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome_prodotto"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/immagine_prodotto"
            android:text="Line 2"
            android:textColor="#F46300"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_elimina"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="1dp"
            android:src="@drawable/img_elimina" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
